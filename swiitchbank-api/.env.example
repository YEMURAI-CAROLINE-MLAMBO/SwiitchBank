# Application Configuration
NODE_ENV=development
PORT=5001

# API Keys
COINAPI_KEY="YOUR_COINAPI_KEY"
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"
STRIPE_SECRET_KEY="YOUR_STRIPE_SECRET_KEY"
MARQETA_API_KEY="YOUR_MARQETA_API_KEY"
MARQETA_API_URL="https://sandbox-api.marqeta.com/v3"

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/swiitchbank
MONGODB_TEST_URI=mongodb://localhost:27017/swiitchbank_test

# For Production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/swiitchbank?retryWrites=true&w=majority

# Database Settings
DB_MAX_POOL_SIZE=50
DB_MIN_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# Data Retention (in days)
TRANSACTION_RETENTION_DAYS=365
INSIGHT_RETENTION_DAYS=90
USER_DATA_RETENTION_DAYS=730

# JSON Web Token (JWT)
JWT_SECRET="YOUR_JWT_SECRET"
JWT_EXPIRES_IN=90d

# CORS Origin
# For development, you can use a wildcard or your frontend app's local URL
CORS_ORIGIN=http://localhost:3000

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Crash Protection Settings
MEMORY_LIMIT_MB=512
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
DB_QUERY_TIMEOUT=10000

# QR Code Security
QR_CODE_HMAC_SECRET="YOUR_QR_CODE_HMAC_SECRET"
WEBHOOK_SECRET="YOUR_WEBHOOK_SECRET"