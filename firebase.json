{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "/**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=63072000; includeSubDomains; preload"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://*; object-src 'none'; frame-ancestors 'none';"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Environment",
            "value": "${ENVIRONMENT}"
          }
        ]
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs18",
      "ignore": [
        "node_modules",
        ".git",
        "**/node_modules/**"
      ],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "STRIPE_KEY": "${STRIPE_KEY}",
        "ENVIRONMENT": "${ENVIRONMENT}"
      }
    },
    {
      "source": "api",
      "codebase": "api",
      "runtime": "nodejs18",
      "ignore": [
        "node_modules",
        ".git",
        ".firebase",
        ".firebase-debug.log",
        "firebase-debug.log",
        "firebase-debug.log.env",
        "firebase-debug.log.json",
        "firebase-debug.*.log",
        "*.local"
      ],
      "env": {
        "GEMINI_API_KEY": "${GEMINI_API_KEY}",
        "STRIPE_KEY": "${STRIPE_KEY}",
        "ENVIRONMENT": "${ENVIRONMENT}"
      }
    }
  ],
  "vpcAccess": {
    "connector": {
      "id": "projects/your-gcp-project-id/locations/your-location/connectors/your-vpc-connector-name"
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "dataconnect": {
      "dataDir": "dataconnect/.dataconnect/pgliteData"
    },
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "dataconnect": {
    "source": "dataconnect"
  }
}
