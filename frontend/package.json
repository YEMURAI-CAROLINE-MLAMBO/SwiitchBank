{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^1.7.2",
    "firebase": "^9.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.3",
    "react-scripts": "^5.0.1",
    "react-window": "^2.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "scaffold": "node scripts/scaffold.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!axios|react-markdown|@babel|jest-runner|remark-parse|remark-rehype|rehype-raw|rehype-stringify|hast-util-raw|hast-util-from-parse5|hast-script|hast-util-parse-selector|hast-util-has-property|hast-util-is-element|hast-util-to-string|hast-util-to-html|hast-util-select|hast-util-sanitize|hast-util-embedded|hast-util-classnames|hast-util-capitalize|hast-util-from-html|hast-util-from-string|hast-util-to-text|hast-util-inspect|vfile|vfile-message|unified|bail|trough|is-plain-obj|decode-named-character-reference|character-entities|web-namespaces|zwitch|html-void-elements|ccount|markdown-table|stringify-entities|trim-lines|space-separated-tokens|unist-util-position|unist-util-visit|unist-util-is|unist-builder|unist-util-stringify-position|devlop|hast-util-to-jsx-runtime|comma-separated-tokens|estree-util-is-identifier-name|hast-util-whitespace|property-information|space-separated-tokens|unist-util-position|html-url-attributes|mdast-util-from-markdown|mdast-util-to-string|micromark|mdast-util-to-hast)"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
